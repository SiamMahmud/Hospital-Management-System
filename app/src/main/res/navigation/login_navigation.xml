<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_navigation"
    app:startDestination="@id/loginLandingFragment">

    <fragment
        android:id="@+id/loginLandingFragment"
        android:name="com.example.hospitalmanagement.presentation.login.LoginLandingFragment"
        android:label="fragment_login_landing"
        tools:layout="@layout/fragment_login_landing" >
        <action
            android:id="@+id/action_loginLandingFragment_to_loginInputFragment"
            app:destination="@id/loginInputFragment" />
        <action
            android:id="@+id/action_loginLandingFragment_to_loginCreateFragment"
            app:destination="@id/loginCreateFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginInputFragment"
        android:name="com.example.hospitalmanagement.presentation.login.LoginInputFragment"
        android:label="fragment_login_input"
        tools:layout="@layout/fragment_login_input" >
        <action
            android:id="@+id/action_loginInputFragment_to_loginCreateFragment"
            app:destination="@id/loginCreateFragment" />
        <action
            android:id="@+id/action_loginInputFragment_to_loginForgetPasswordFragment"
            app:destination="@id/loginForgetPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginChangePasswordFragment"
        android:name="com.example.hospitalmanagement.presentation.login.LoginChangePasswordFragment"
        android:label="fragment_login_change_password"
        tools:layout="@layout/fragment_login_change_password" >
        <action
            android:id="@+id/action_loginChangePasswordFragment_to_loginVerifyPasswordFragment"
            app:destination="@id/loginVerifyPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginCreateFragment"
        android:name="com.example.hospitalmanagement.presentation.login.LoginCreateFragment"
        android:label="fragment_login_create"
        tools:layout="@layout/fragment_login_create" >
        <action
            android:id="@+id/action_loginCreateFragment_to_loginInputFragment"
            app:destination="@id/loginInputFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginForgetPasswordFragment"
        android:name="com.example.hospitalmanagement.presentation.login.LoginForgetPasswordFragment"
        android:label="fragment_login_forget_password"
        tools:layout="@layout/fragment_login_forget_password" >
        <action
            android:id="@+id/action_loginForgetPasswordFragment_to_loginInputFragment"
            app:destination="@id/loginInputFragment" />
        <action
            android:id="@+id/action_loginForgetPasswordFragment_to_loginVerifyPasswordFragment"
            app:destination="@id/loginVerifyPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginVerifyPasswordFragment"
        android:name="com.example.hospitalmanagement.presentation.login.LoginVerifyPasswordFragment"
        android:label="fragment_login_verify_password"
        tools:layout="@layout/fragment_login_verify_password" >
        <action
            android:id="@+id/action_loginVerifyPasswordFragment_to_loginForgetPasswordFragment"
            app:destination="@id/loginForgetPasswordFragment" />
        <action
            android:id="@+id/action_loginVerifyPasswordFragment_to_loginChangePasswordFragment"
            app:destination="@id/loginChangePasswordFragment" />
    </fragment>
</navigation>