<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.example.hospitalmanagement.presentation.dashboard.HomeFragment" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dash_board_background">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:paddingBottom="@dimen/padding_20"
            android:rowCount="5">

            <androidx.cardview.widget.CardView
                android:id="@+id/customerCv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_117"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_marginLeft="@dimen/margin_11"
                android:layout_marginTop="@dimen/margin_top_12"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="@dimen/corner_radius_10">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/width_40"
                        android:layout_height="@dimen/height_40"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/appointment_image" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/appointment"
                        android:textColor="@color/dash_board_text_color"
                        android:textSize="@dimen/text_size_11" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/saleCV"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_117"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:onClick="@{model.actionDoctorList}"
                android:layout_marginLeft="@dimen/margin_left_13"
                android:layout_marginTop="@dimen/margin_top_12"
                android:layout_marginRight="@dimen/margin_11"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="@dimen/corner_radius_10">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/width_40"
                        android:layout_height="@dimen/height_40"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/doctor_list"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/doctor_list"
                        android:textColor="@color/dash_board_text_color"
                        android:textSize="@dimen/text_size_11" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/productCv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_117"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="@dimen/margin_11"
                android:layout_marginTop="@dimen/margin_top_12"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="@dimen/corner_radius_10">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/width_40"
                        android:layout_height="@dimen/height_40"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/pres_image"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/prescription"
                        android:textColor="@color/dash_board_text_color"
                        android:textSize="@dimen/text_size_11" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/expenseCv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_117"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="@dimen/margin_left_13"
                android:layout_marginTop="@dimen/margin_top_12"
                android:layout_marginRight="@dimen/margin_11"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="@dimen/corner_radius_10">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/width_40"
                        android:layout_height="@dimen/height_40"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_store"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/medicine_store"
                        android:textColor="@color/dash_board_text_color"
                        android:textSize="@dimen/text_size_11" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/storeCv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_117"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:onClick="@{model.actionAmbulanceList}"
                android:layout_marginLeft="@dimen/margin_11"
                android:layout_marginTop="@dimen/margin_top_12"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="@dimen/corner_radius_10">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/width_40"
                        android:layout_height="@dimen/height_40"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ambulance_image"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/ambulance"
                        android:textColor="@color/dash_board_text_color"
                        android:textSize="@dimen/text_size_11" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/representativeCv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_117"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="@dimen/margin_left_13"
                android:layout_marginTop="@dimen/margin_top_12"
                android:layout_marginRight="@dimen/margin_11"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="@dimen/corner_radius_10">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/width_40"
                        android:layout_height="@dimen/height_40"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_blood"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/blood_bank"
                        android:textColor="@color/dash_board_text_color"
                        android:textSize="@dimen/text_size_11" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>
    </ScrollView>


</layout>